# AI Mini Games Backend Environment Variables

# Environment
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
API_BASE_URL=http://localhost:8000

# Database
DATABASE_URL=postgresql://aimini:aimini@localhost:5432/aimini_db

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key
HUGGING_FACE_API_KEY=hf_your-hugging-face-key
AI_GENERATION_TIMEOUT_MINUTES=30

# AWS S3 (Optional)
USE_S3_STORAGE=false
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=aimini-games-storage
AWS_S3_REGION=us-east-1

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# CORS (for mobile apps)
CORS_ORIGINS=http://localhost:3000,capacitor://localhost,ionic://localhost

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Mobile App Settings
MOBILE_MIN_VERSION=1.0.0
MOBILE_LATEST_VERSION=1.0.0

# Game Settings
MAX_GAMES_PER_USER=100
MAX_GAME_FILE_SIZE_MB=10

# Marketplace
MARKETPLACE_COMMISSION_PERCENTAGE=30.0
MIN_GAME_PRICE=0.99
MAX_GAME_PRICE=99.99